void deleteNode(int key) {
    if (head == NULL) return;

    Node *temp = head, *prev = NULL;

    // If head node is to be deleted
    if (head->data == key) {
        while (temp->next != head)
            temp = temp->next;

        temp->next = head->next;
        delete head;
        head = temp->next;
        return;
    }

    temp = head;
    do {
        prev = temp;
        temp = temp->next;

        if (temp->data == key) {
            prev->next = temp->next;
            delete temp;
            return;
        }

    } while (temp != head);

    cout << "Node not found!\n";
}
